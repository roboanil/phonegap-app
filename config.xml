<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.hello" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Helloworld</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />

    <gap:plugin name="com.phonegap.plugins.barcodescanner"/>
    
    <gap:plugin name="org.apache.cordova.camera" version="0.3.2" />

    <gap:plugin name="org.apache.cordova.media-capture" version="0.3.3" />

    <gap:plugin name="org.apache.cordova.media" version="1.0.0" />
    
    <gap:plugin name="org.apache.cordova.core.geolocation" version="0.3.10" />

    <gap:plugin name="org.apache.cordova.file" version="2.0.0" />

    <gap:plugin name="org.apache.cordova.file-transfer" version="1.1.0" />
    
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>